<Window x:Class="KasaBiletowa.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KasaBiletowa"
        mc:Ignorable="d"
        Title="Login" Height="280" ResizeMode="NoResize" Width="280">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock FontSize="20" FontWeight="Bold">Kasa Biletowa</TextBlock>
            <TextBlock TextWrapping="Wrap">Witamy w systemie sprzedaży biletów. Aby kontynuować proszę się zalogować.</TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">Jeśli nie posiadasz jeszcze konta, możesz je <Hyperlink Click="Zarejestruj_OnClick">założyć tutaj</Hyperlink></TextBlock>
            <TextBlock Margin="0,10,0,0">Login</TextBlock>
            <TextBox x:Name="LoginTextBox"/>
            <TextBlock Margin="0,10,0,0">Hasło</TextBlock>
            <PasswordBox x:Name="PasswordBox"/>
            <Button x:Name="Zaloguj" Margin="0,10,0,0" Click="Zaloguj_OnClick">Zaloguj</Button>
        </StackPanel>
    </Grid>
</Window>
